<div class="container">
    <div class="row">
        <div class="col-3"> 
            <div class="card" style="width: 18rem;">
                <img src="..." class="card-img-top" alt="...">
                <div class="card-body">
                    <h3 class="card-title"> <%= @user.username %> </h3>
                </div>
            </div>
            <% if current_user.admin? && !current_user?(@user) %>
            <p><%= button_to "Cancella account", registration_path(@user), data: { confirm: "Are you sure?" }, method: :delete %></p>
            <% end%>
          </div>
    <div class="col-9">
    <div class="container">

    <% @insertion.each do |i| %>
    <div class="row">
    <div class="jumbotron jumbotron-fluid">
      <div class="container">
      <div class="row">
        <div class="col-3">
          <%= image_tag i.thumbnail[0],style:'width:100%; height: 200px; overflow-y:hidden' %>
        </div>
        <div class="col-9">
          <h1 class="display-4"> <%= link_to i.title, i %> </h1>
          <p class="lead"><%= i.updated_at.strftime("%A, %B %e, %Y") %> by <%= i.user.username %> 
          
        </div>
      </div>
      </div>
    </div>
  </div>
  <% end %>
  
</div>
    </div>
    </div>
</div>
